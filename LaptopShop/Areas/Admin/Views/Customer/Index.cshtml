@model PagedList.IPagedList<Model.EF.customer>
    @using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                @using (Html.BeginForm("index", "Customer", FormMethod.Post))
                {
                    <div class=" col-md-4">
                        <input type="text" class="form-control" name="searchString" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Tim kiếm</button>
                    </div>
                }

            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Email</th>
                            <th scope="col">Address</th>
                            <th scope="col">PhoneNumber</th>
                            <th scope="col">CreatedAt</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ long STT = 0;}
                        @foreach (var item in Model)
                        {
                            STT++;
                        <tr>
                            <td>@STT</td>
                            <td>@item.id</td>
                            <td>@item.name</td>
                            <td>@item.gender</td>
                            <td>@item.email</td>
                            <td>@item.address</td>
                            <td>@item.phone_number</td>
                            <td>@item.created_at</td>
                        </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model,page=>Url.Action("Index",new { page }));
            </div>
        </div>

    </div>
</div>



