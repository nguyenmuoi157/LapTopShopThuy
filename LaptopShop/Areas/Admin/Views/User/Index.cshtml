@model List<Model.EF.user>
@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    $(document).ready(function () {

        console.log("ready")
    })
</script>

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                @using (Html.BeginForm("index", "User", FormMethod.Post))
                {
                    <div class=" col-md-4">
                        <input type="text" class="form-control" name="searchString" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Tim kiếm</button>
                    </div>
                }

            </div>
            @if (ViewBag.isColoi == true)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Loi
                </div>
            }

            @*@Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })*@
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">ID</th>
                            <th scope="col">UserName</th>
                            <th scope="col">FullName</th>
                            <th scope="col">Email</th>
                            <th scope="col">CreatedAt</th>
                            <th scope="col">Role</th>

                            <th scope="col">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ long STT = 0;}
                        @foreach (var item in Model)
                        {
                            STT++;
                            <tr>
                                <td>@STT</td>
                                <td>@item.id</td>
                                <td>@item.username</td>
                                <td>@item.full_name</td>
                                <td>@item.email</td>
                                <td>@item.created_at</td>
                                @if (item.RoleID == 1)
                                {
                                    <td>Admin</td>
                                }
                                else
                                {
                                    <td>User</td>
                                }
                                <td>
                                    @if (item.RoleID == 1)
                                    {
                                        <a href="/Admin/User/ModifyRole?userID=@item.id&RoleId=2" class="btn btn-primary">Đặt thành user</a>
                                    }
                                    else
                                    {
                                        <a href="/Admin/User/ModifyRole?userID=@item.id&RoleId=1" class="btn btn-primary">Đặt thành Admin</a>
                                    }
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

