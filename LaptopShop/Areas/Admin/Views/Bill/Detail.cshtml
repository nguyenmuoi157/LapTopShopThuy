@model IEnumerable<Model.EF.bill_detail>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="col-lg-12">
                @using (Html.BeginForm("index", "BillDetail", FormMethod.Post))
                {
                    <div class=" col-md-4">
                        <input type="text" class="form-control" name="searchString" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success">Tim kiếm</button>
                    </div>
                }

            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">STT</th>
                            <th scope="col">ID </th>
                            <th scope="col">ID Bill</th>
                            <th scope="col">ID Product</th>
                            <th scope="col">Quatity</th>
                            <th scope="col">Unit Price</th>
                            <th scope="col">CreatedAt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ long STT = 0;}
                        @foreach (var item in Model)
                        {
                            STT++;
                            <tr>
                                <td>@STT</td>
                                <td>@item.id</td>
                                <td>@item.id_bill</td>
                                <td>@item.id_product</td>
                                <td>@item.quantity</td>
                                <td>@string.Format("{0:0,0}", item.unit_price)</td>
                                <td>@item.created_at</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>






